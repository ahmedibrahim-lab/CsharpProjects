@page
@model FinancialPlanner.Pages.SelectInstitutionModel
@{
    ViewData["Title"] = "Select Your Bank";
}

<h1>Select Your Bank</h1>
<p>Please choose your bank from the list below:</p>

<form method="post" id="selectInstitutionForm">
    <div class="form-group">
        <label for="institutionId">Select Institution:</label>
        <select id="institutionId" name="SelectedInstitutionId" asp-for="SelectedInstitutionId" class="form-control">
            <option value="">-- Select an Institution --</option>
            @foreach (var institution in Model.Institutions)
            {
                <option value="@institution.Id">@institution.Name (@institution.Id)</option>
            }
        </select>
        <span asp-validation-for="SelectedInstitutionId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary" formaction="/SelectInstitution?handler=SelectInstitution">Continue</button>
</form>

<!-- Agreement Modal -->
<div class="modal fade" id="agreementModal" tabindex="-1" role="dialog" aria-labelledby="agreementModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="agreementModalLabel">Agreement</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>By accepting this agreement, you allow us to access your banking information to provide our financial planning services.</p>
                <p>Do you accept the terms?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="rejectButton">Reject</button>
                <button type="button" class="btn btn-primary" id="acceptAgreement">Accept</button>
            </div>
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1" role="dialog" aria-labelledby="rejectModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="rejectModalLabel">Agreement Rejection</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>We need your acceptance to proceed with providing our financial planning services. You can return to the home page and explore other features.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="returnHome">Return Home</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js" integrity="sha384-LtrjvnR4/JqsMf7MpBsn7l4u+UhbYTfykmj62i5CpqpF1U4MEZoR6fTwtQh0IVoP" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function() {
            // Show the agreement modal after form submission
            var urlParams = new URLSearchParams(window.location.search);
            if (urlParams.has('showAgreementModal')) {
                $('#agreementModal').modal('show');
            }

            // Handle the accept button click
            $('#acceptAgreement').click(function() {
                $('#selectInstitutionForm').attr('action', '/SelectInstitution?handler=CreateAgreement');
                $('#selectInstitutionForm').submit();
            });

            // Handle the reject button click
            $('#rejectButton').click(function() {
                $('#agreementModal').modal('hide');
                $('#rejectModal').modal('show');
            });

            // Handle the return home button click in the reject modal
            $('#returnHome').click(function() {
                window.location.href = '/';
            });

            // Initialize the modals
            $('#agreementModal').modal({ show: false });
            $('#rejectModal').modal({ show: false });
        });
    </script>
}
